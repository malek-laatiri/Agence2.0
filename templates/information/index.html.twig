{% extends 'base.html.twig' %}

{% block title %}Hello InformationController!{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-md-offset-2 col-md-8 col-lg-offset-3 col-lg-6">
                <div class="well profile">
                    <div class="col-sm-12">
                        <div class="col-xs-12 col-sm-8">
                            <h2>{{ app.user.username }}</h2>
                            <p><strong>Email </strong> {{ app.user.email }} </p>
                            <p><strong>Last Login </strong> {{ app.user.lastLogin|date('Y-m-d')}} </p>

                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>


    <section class="page-section categories-page">
        <div class="container">
            <div class=" row">
                {% for y in property %}
                    <div {% if loop.index is odd %}class="color"{% endif %}></div>
                    <div class="col-lg-4 col-md-6">

                        <div class="mx-auto animated fadeInDown">
                            <div class="feature-item">
                                <div class="sale-notic">{{ y.token }}</div>
                                <img class="feature-pic set-bg" src="/images/products/{{ y.image }}">

                                </img>
                                <div class="feature-text">
                                    <div class="text-center feature-title">
                                        <h5> <a href="{{ path('property.show',{id: y.id, slug: y.slug})}}" class="room-price">{{y.title}}</a></h5>

                                        <p><i class="fa fa-map-marker"></i> {{y.address}}</p>
                                    </div>
                                    <div class="room-info-warp">
                                        <div class="room-info">
                                            <div class="rf-left">
                                                <p><i class="fa fa-th-large"></i> {{y.surface}}</p>
                                                <p><i class="fa fa-bed"></i> {{y.rooms}}</p>
                                            </div>
                                            <div class="rf-right">
                                                <p><i class="fa fa-building"></i> {{y.floor}}</p>
                                            </div>
                                        </div>
                                        <div class="room-info">
                                            <div class="rf-right">
                                                <p><i class="fa fa-clock-o"></i> {{y.createdat|date('Y-m-d')}}</p>
                                            </div>
                                        </div>
                                    </div>
                                    <a href="#" class="room-price">{{y.price}}â‚¬</a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>



    </div>


{% endblock %}
